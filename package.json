{
  "name": "translate-cli",
  "version": "1.0.0",
  "description": "A CLI tool to batch translate text into multiple target languages",
  "main": "dist/presentation/cli/cli.js",
  "bin": {
    "translate": "./dist/presentation/cli/cli.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/presentation/cli/cli.js",
    "dev": "ts-node src/presentation/cli/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "translate",
    "batch",
    "google-translate"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "https-proxy-agent": "^7.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.0"
  }
}
